

rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /activations/{code} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /cards/{code} {
      allow read, write: if false;
    }
  }
}
