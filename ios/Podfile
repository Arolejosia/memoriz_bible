# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

use_frameworks!
use_modular_headers!

flutter_application_path = '../'
load File.join(flutter_application_path, '.flutter-plugins-dependencies')

target 'Runner' do
  # Flutter Podhelper
  generated_xcode_build_settings_path = File.join('Flutter', 'Generated.xcconfig')

  unless File.exist?(generated_xcode_build_settings_path)
    puts "⚠️  Warning: #{generated_xcode_build_settings_path} not found. Running flutter pub get..."
    system("flutter pub get")
  end

  if File.exist?(generated_xcode_build_settings_path)
    File.foreach(generated_xcode_build_settings_path) do |line|
      matches = line.match(/FLUTTER_ROOT=(.*)/)
      ENV['FLUTTER_ROOT'] = matches[1].strip if matches
    end
  else
    puts "❌ Still missing #{generated_xcode_build_settings_path}, check flutter configuration."
  end

  use_frameworks!
  use_modular_headers!

  flutter_ios_podfile_setup

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
